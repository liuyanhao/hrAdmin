<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="IssueJobMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_ISSUEJOB
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		JOB_MESSAGE_ID,
		JOB_TYPE_ID,
		COUNTS,
		PRINCIPAL,
		FOUNDTIME,
		ISSUEJOB_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{JOB_MESSAGE_ID},
		#{JOB_TYPE_ID},
		#{COUNTS},
		#{PRINCIPAL},	
		#{FOUNDTIME},	
		#{ISSUEJOB_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			ISSUEJOB_ID = #{ISSUEJOB_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			JOB_MESSAGE_ID = #{JOB_MESSAGE_ID},
		JOB_TYPE_ID = #{JOB_TYPE_ID},
			COUNTS = #{COUNTS},
			FOUNDTIME = #{FOUNDTIME},
		ISSUEJOB_ID = ISSUEJOB_ID
		where 
		ISSUEJOB_ID = #{ISSUEJOB_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			ISSUEJOB_ID = #{ISSUEJOB_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
			i.JOB_MESSAGE_ID,
			i.JOB_TYPE_ID,
			COUNTS,
			PRINCIPAL,
			FOUNDTIME,
			ISSUEJOB_ID,
			j.JOB_NAME as JOB_MESSAGE_NAME
		from 
		<include refid="tableName"></include> i left JOIN  tb_job_message j
		 on j.JOB_MESSAGE_ID = i.JOB_MESSAGE_ID
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件	-->
			     PRINCIPAL LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				)
		</if>
		<if test="pd.lastStart!=null and pd.lastStart!=''"><!-- 开始时间检索 -->
			and FOUNDTIME &gt;= #{pd.lastStart}
		</if>
		<if test="pd.lastEnd!=null and pd.lastEnd!=''"><!-- 结束时间检索 -->
			and FOUNDTIME &lt;= #{pd.lastEnd}
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
			i.JOB_MESSAGE_ID,
			i.JOB_TYPE_ID,
			COUNTS,
			PRINCIPAL,
			FOUNDTIME,
			ISSUEJOB_ID,
			j.JOB_NAME as JOB_MESSAGE_NAME
		from 
		<include refid="tableName"></include> i left JOIN  tb_job_message j
		on j.JOB_MESSAGE_ID = i.JOB_MESSAGE_ID
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			ISSUEJOB_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- lxc 1094921525qq -->
</mapper>