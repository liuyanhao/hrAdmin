<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SubjectManageMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_SUBJECTMANAGE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		SUBJECT_NAME,	
		SUBJECT_TYPE,	
		SELECT_A,	
		SELECT_B,	
		SELECT_C,	
		SELECT_D,	
		SELECT_E,	
		SELECT_F,	
		SELECT_TURE,	
		ISSUE_PERSON,	
		ISSUE_TIME,	
		SUBJECTMANAGE_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{SUBJECT_NAME},	
		#{SUBJECT_TYPE},	
		#{SELECT_A},	
		#{SELECT_B},	
		#{SELECT_C},	
		#{SELECT_D},	
		#{SELECT_E},	
		#{SELECT_F},	
		#{SELECT_TURE},	
		#{ISSUE_PERSON},	
		#{ISSUE_TIME},	
		#{SUBJECTMANAGE_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			SUBJECTMANAGE_ID = #{SUBJECTMANAGE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			SUBJECT_NAME = #{SUBJECT_NAME},
			SUBJECT_TYPE = #{SUBJECT_TYPE},
			SELECT_A = #{SELECT_A},
			SELECT_B = #{SELECT_B},
			SELECT_C = #{SELECT_C},
			SELECT_D = #{SELECT_D},
			SELECT_E = #{SELECT_E},
			SELECT_F = #{SELECT_F},
			SELECT_TURE = #{SELECT_TURE},
			ISSUE_PERSON = #{ISSUE_PERSON},
			ISSUE_TIME = #{ISSUE_TIME},
		SUBJECTMANAGE_ID = SUBJECTMANAGE_ID
		where 
		SUBJECTMANAGE_ID = #{SUBJECTMANAGE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			SUBJECTMANAGE_ID = #{SUBJECTMANAGE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.SUBJECT_TYPE != null and pd.SUBJECT_TYPE != ''">
			and SUBJECT_TYPE = #{SUBJECT_TYPE}
		</if>
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件 -->
			SUBJECT_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or
			SUBJECT_TYPE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')

				)
		</if>
		<if test="pd.lastStart!=null and pd.lastStart!=''"><!-- 开始时间检索 -->
			and ISSUE_TIME &gt;= #{pd.lastStart}
		</if>
		<if test="pd.lastEnd!=null and pd.lastEnd!=''"><!-- 结束时间检索 -->
			and ISSUE_TIME &lt;= #{pd.lastEnd}
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			SUBJECTMANAGE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- lxc 1094921525qq -->
</mapper>