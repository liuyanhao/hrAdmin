<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="StipenManagerMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_STIPENMANAGER
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		STIPEND_NAME,	
		STIPEND_USER_NAME,	
		STIPEN_WEAL_JOURNEY,	
		STIPEN_WEAL_LUNCH,
		GTIPEND_DATE,	
		BASE_STIPEND_ID,	
		STIPEND_TYPE,	
		STIPEND_WEAL,	
		STATUS,	
		STIPENMANAGER_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{STIPEND_NAME},	
		#{STIPEND_USER_NAME},	
		#{STIPEN_WEAL_JOURNEY},	
		#{STIPEN_WEAL_LUNCH},
		#{GTIPEND_DATE},	
		#{BASE_STIPEND_ID},	
		#{STIPEND_TYPE},	
		#{STIPEND_WEAL},	
		#{STATUS},	
		#{STIPENMANAGER_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			STIPENMANAGER_ID = #{STIPENMANAGER_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			STIPEND_NAME = #{STIPEND_NAME},
			STIPEND_USER_NAME = #{STIPEND_USER_NAME},
			STIPEN_WEAL_JOURNEY = #{STIPEN_WEAL_JOURNEY},
			STIPEN_WEAL_LUNCH = #{STIPEN_WEAL_LUNCH},
			GTIPEND_DATE = #{GTIPEND_DATE},
			STIPEND_TYPE = #{STIPEND_TYPE},
			STIPEND_WEAL = #{STIPEND_WEAL},
			STATUS = #{STATUS},
		STIPENMANAGER_ID = STIPENMANAGER_ID
		where 
		STIPENMANAGER_ID = #{STIPENMANAGER_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			STIPENMANAGER_ID = #{STIPENMANAGER_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件 -->
			STIPEND_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or
			STIPEND_USER_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			STIPENMANAGER_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>

	<select id="findCount"  parameterType="pd" resultType="pd">
		select
		  count(*) zs
		from
		<include refid="tableName"></include>
		where
		STIPENMANAGER_ID = #{STIPENMANAGER_ID}
	</select>

	<!-- lxc 1094921525qq -->
</mapper>