<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="JobMessageMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_JOB_MESSAGE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		JOB_TYPE_ID,	
		JOB_NAME,	
		STIPEND_MANAGER_ID,	
		JOB_MESSAGE_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{JOB_TYPE_ID},	
		#{JOB_NAME},	
		#{STIPEND_MANAGER_ID},	
		#{JOB_MESSAGE_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			JOB_MESSAGE_ID = #{JOB_MESSAGE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			JOB_NAME = #{JOB_NAME},
			STIPEND_MANAGER_ID = #{STIPEND_MANAGER_ID},
		JOB_MESSAGE_ID = JOB_MESSAGE_ID
		where 
		JOB_MESSAGE_ID = #{JOB_MESSAGE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			JOB_MESSAGE_ID = #{JOB_MESSAGE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件 -->
			    JOB_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				)
		</if>
	</select>

	<!-- 查询符合条件列表 -->
	<select id="listJobType" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where 1=1
		<if test="JOB_TYPE_ID != null and JOB_TYPE_ID != '' ">
			and JOB_TYPE_ID = #{JOB_TYPE_ID}
		</if>
	</select>

	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			JOB_MESSAGE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>

	<!-- lxc 1094921525qq -->
</mapper>